# Configuración específica para Podman
# Copiar este archivo a .env antes de usar

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=queue_system
DB_USER=postgres
DB_PASSWORD=secure_password_123

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
MAX_CONCURRENT_JOBS=10
MAX_RETRIES=3
RETRY_DELAY=5000

# Queue Concurrency Settings
EMAIL_CONCURRENCY=3
IMAGE_CONCURRENCY=2
FILE_CONCURRENCY=3
EXPORT_CONCURRENCY=1
API_CONCURRENCY=5
CLEANUP_CONCURRENCY=1

# Production Settings
WORKER_REPLICAS=3

# Producer Settings (for demo)
PRODUCER_INTERVAL=5000
PRODUCER_MAX_TASKS=100

# SSL Settings (optional)
DB_SSL=false

# Podman specific settings
PODMAN_USERNS=keep-id
PODMAN_SECURITY_OPT=label=disable